@model IEnumerable<Cinema>
@{
    ViewData["Title"] = "List of Cinema";
}



<div class="row text-white">
    <div class="col-md-8 offset-md-2">
        <table class="table table-dark table-hover border border-info">
            <thead>
            <th>@Html.DisplayNameFor(m => m.Logo)</th>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Description)</th>
            <th>Actions</th>
            </thead>
            <tbody>
                @foreach (var cinema in Model)
                {
                    <tr>
                        <td class="aling-middle">
                            <img class="rounded" src="@Html.DisplayFor(mi => cinema.Logo)" alt="@Html.DisplayFor(mi => cinema.Name)" style="max-width: 100px" />

                        </td>
                        <td class="text-center"><strong> @cinema.Name</strong></td>
                        <td class="aling-middle"> @cinema.Description</td>
                        <td>
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>